<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants"><!-- 为突出卡片效果，需设置左右padding,上下通过listView的divider设置 -->
    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"><!-- 给每个item增加background -->

        <TextView
            android:id="@+id/jiefinish_tname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="任务标题:"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="起始地址:"
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_myaddress"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5教"
                android:textColor="#FA403934"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="目标地址:"
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_targetaddress"
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5教"
                android:textColor="#FA403934"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="联系方式:"
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_tphone"
                android:layout_width="233dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1234567890"
                android:textColor="#FA403934"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>