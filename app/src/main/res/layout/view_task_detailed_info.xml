<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FA403934"
                android:text="任务标题: "
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_tname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FA403934"
                android:text="帮我拿东西"
                android:textSize="30dp"
                android:textStyle="bold"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="任务类型: "
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_tkind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="下拉框类型"
                android:textSize="30dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="任务详情: "
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_tdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="去5教老师办公室拿资料"
                android:textSize="30dp"
                android:textStyle="bold"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="目标地址: "
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_targetaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5教"
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="本人地址: "
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_myaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="我在c区18栋"
                android:textSize="30dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="发布任务时间："
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FA403934"
                android:text="2022年4月12日23:33分"
                android:textSize="30dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="收货人："
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="张女士"
                android:textSize="30dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="电话："
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_tphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FA403934"
                android:text="18178333174"
                android:textSize="30dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="此单价格: "
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_tprice"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#ff0000"
                android:textSize="30dp" />

            <TextView
                android:layout_width="61dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="元"
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/button_receive_order"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="接单"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_main"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="返回"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/button_style"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>