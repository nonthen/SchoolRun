<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants"><!-- 为突出卡片效果，需设置左右padding,上下通过listView的divider设置 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"><!-- 给每个item增加background -->
        <TextView
            android:id="@+id/item_tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="任务标题:"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_targetaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="目标地址:"
            android:textSize="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:"
                android:textSize="30dp"
                android:textColor="#2C2828"
                />

            <TextView
                android:id="@+id/item_tprice"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#ff0000"
                android:textSize="30dp" />

            <TextView
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="元"
                android:textColor="#2E1517"
                android:textSize="30dp" />

            <TextView
                android:layout_width="141dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="正在审核"
                android:textStyle="bold"
                android:textColor="#2E1517"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>