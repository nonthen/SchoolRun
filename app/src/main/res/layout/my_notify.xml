<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/returnMe"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="#1EFFFFFF"
                android:src="@drawable/ic_icon_arrow_arrow_left" />

            <TextView
                android:layout_width="252dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="系统通知"
                android:textColor="#050505"
                android:textSize="40sp">
            </TextView>

            <RadioButton
                android:id="@+id/ordernotify"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/ic_my_notification"
                android:gravity="center"
                android:text="订单消息"
                android:textColor="#635F5F"/>

        </LinearLayout>
        <ListView
            android:id="@+id/task_notify_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true" >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编辑"
            android:onClick="click_editButton1"
            android:background="@drawable/button_style"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"
            android:onClick="click_deleteButton1"
            android:background="@drawable/button_style"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:onClick="click_cancelButton1"
            android:background="@drawable/button_style"
            android:textColor="#ffffff"
            android:textSize="20dp"
            />
    </LinearLayout>
</LinearLayout>
