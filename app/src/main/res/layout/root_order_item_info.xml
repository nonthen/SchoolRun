<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants"><!-- 为突出卡片效果，需设置左右padding,上下通过listView的divider设置 -->
    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"><!-- 给每个item增加background -->

        <TextView
            android:id="@+id/jiefinish_tname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="任务标题:"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="申请人id:"
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_id"
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="申请人id"
                android:textColor="#FA403934"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消原因:"
                android:textColor="#FA403934"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_canceldetails"
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:text="详细信息"
                android:textColor="#FA403934"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>