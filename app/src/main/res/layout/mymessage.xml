<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="403dp"
        android:layout_height="472dp"
        app:layout_constraintBottom_toTopOf="@+id/rg_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/change_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人信息" />

            <Button
                android:id="@+id/look_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看任务" />

            <Button
                android:id="@+id/look_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看订单" />

            <Button
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改密码" />

            <Button
                android:id="@+id/appraisebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="评价服务" />

            <Button
                android:id="@+id/look_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看收益" />

            <Button
                android:id="@+id/software_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="软件设置" />

            <Button
                android:id="@+id/idea_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="意见反馈" />
        </LinearLayout>
    </ScrollView>

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="403dp"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/shouye"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="任务" />

        <RadioButton
            android:id="@+id/rb_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/fabu"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="发布任务" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/person"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:text="我" />
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>