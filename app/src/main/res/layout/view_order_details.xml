<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/returnlistbutton"
            android:layout_width="71dp"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="#2E1517"
            android:textSize="38sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FA403934"
            android:text="任务标题: "
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FA403934"
            android:text="帮我拿东西"
            android:textSize="30dp"
            android:textStyle="bold"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="任务类型: "
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_tkind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="下拉框类型"
            android:textSize="30dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="任务详情: "
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_tdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="去5教老师办公室拿资料"
            android:textSize="30dp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="目标地址: "
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_targetaddress"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5教"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="本人地址: "
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_myaddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我在c区18栋"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="电话："
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_tphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FA403934"
            android:text="18178333174"
            android:textSize="30dp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格: "
            android:textSize="30dp"
            android:textColor="#FA403934"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/item_tprice"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="61dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="发布时间:"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/begain_time"
            android:layout_width="273dp"
            android:layout_height="89dp"
            android:gravity="center_vertical"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="接单时间:"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jiedan_time"
            android:layout_width="278dp"
            android:layout_height="87dp"
            android:gravity="center_vertical"
            android:textColor="#ff0000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>