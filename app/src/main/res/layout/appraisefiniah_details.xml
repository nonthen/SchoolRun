<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已评价的任务详情"
            android:textColor="#2E1517"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务标题: "
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jiefinish_tname"
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:text="帮我拿东西"
            android:textColor="#FA403934"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="任务类型: "
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tkind"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="下拉框类型"
            android:textColor="#FA403934"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="任务详情: "
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tdetail"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:text="去5教老师办公室拿资料"
            android:textColor="#FA403934"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格: "
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jiefinish_tprice"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:textColor="#FA403934"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="#FA403934"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="评分："
            android:textColor="#2E1517"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appfinishscore"
            android:layout_width="121dp"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:textColor="#2E1517"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论："
            android:textColor="#2E1517"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appfinishdetails"
            android:layout_width="312dp"
            android:layout_height="match_parent"
            android:text="评论详情"
            android:textColor="#2E1517"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="73dp">

        <Button
            android:id="@+id/button_fanhui"
            android:layout_width="209dp"
            android:layout_height="58dp"
            android:background="@drawable/button_style"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>